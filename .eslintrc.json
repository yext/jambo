{
  "extends": "plugin:@typescript-eslint/recommended",
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": [
    "tests/fixtures/**/*.js",
    "lib"
  ],
  "rules": {
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "arrow-spacing": "error",
    "quotes": [
      "error",
      "single"
    ],
    "space-before-function-paren": [
      "error",
      {
        "named": "never",
        "anonymous": "never"
      }
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "max-len": [
      "error",
      {
        "code": 125
      }
    ]
  },
  "overrides": [
    {
      "files": ["tests/acceptance/test-themes/**"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ]
}