{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "ignorePatterns": ["tests/fixtures/**/*.js"],
    "rules": {
        "arrow-spacing": "error",
        "quotes": ["error", "single"],
        "space-before-function-paren": ["error", {
            "named": "never",
            "anonymous": "never"
        }],
        "quote-props": ["error", "as-needed"],
        "max-len": ["error", { 
            "code": 90,
            "ignorePattern": "^const\\s.+=\\s*require\\s*\\("
        }]
    }
}
