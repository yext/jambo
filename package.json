{
  "name": "jambo",
  "version": "1.12.1",
  "description": "A JAMStack implementation using Handlebars",
  "main": "./lib/exports.js",
  "types": "./lib/cli.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "eslint . && jest",
    "build": "tsc && npm run api-extractor && npm run generate-docs",
    "build-ci": "tsc && npm run api-extractor-ci && npm run generate-docs",
    "api-extractor": "api-extractor run --local --verbose",
    "api-extractor-ci": "api-extractor run --verbose",
    "generate-docs": "api-documenter markdown --input-folder temp --output-folder docs && rm -rf temp",
    "preinstall": "npx npm-force-resolutions"
  },
  "resolutions": {
    "validator": "13.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yext/jambo.git"
  },
  "bin": {
    "jambo": "lib/cli.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "author": "slapshot@yext.com",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/yext/jambo/issues"
  },
  "homepage": "https://github.com/yext/jambo#readme",
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@microsoft/api-documenter": "^7.13.49",
    "@microsoft/api-extractor": "^7.18.9",
    "comment-json": "^3.0.2",
    "file-system": "^2.2.2",
    "fs-extra": "^8.1.0",
    "gettext-extractor": "^3.5.2",
    "glob-to-regexp": "^0.4.1",
    "globby": "^11.0.1",
    "handlebars": "^4.7.7",
    "i18next": "^19.6.2",
    "i18next-conv": "^10.0.2",
    "lodash": "^4.17.15",
    "merge-options": "^2.0.0",
    "npmlog": "^4.1.2",
    "prompts": "^2.3.1",
    "simple-git": "^2.40.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@babel/node": "^7.14.9",
    "@babel/plugin-transform-object-assign": "^7.12.1",
    "@babel/preset-typescript": "^7.15.0",
    "@handlebars/parser": "^2.1.0",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel-jest": "^27.1.1",
    "eslint": "^7.32.0",
    "jest": "^27.1.1",
    "prettier": "^2.3.2",
    "shell-quote": "^1.7.2",
    "typescript": "^4.4.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**"
    ],
    "verbose": true,
    "globalSetup": "./tests/setup/globalsetup.js",
    "globalTeardown": "./tests/setup/globalteardown.js",
    "setupFilesAfterEnv": [
      "./tests/setup/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.[j|t]s",
      "!**/tests/acceptance/**/*.js",
      "**/tests/acceptance/suites/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/fixtures/",
      "<rootDir>/tests/setup/"
    ]
  }
}
